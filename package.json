{
  "name": "paderbornjs-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/paderbornjs/api",
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development nodemon -e ts,graphql --exec ts-node src/index.ts",
    "compile": "tsc",
    "precompile": "rm -rf build && mkdir build && find ./src -name '*.graphql' -exec cp -pr  '{}' 'build/' ';'",
    "deploy": "now --public && now alias && yarn remove-old-deploys",
    "remove-old-deploys": "now rm paderbornjs-api --safe --yes",
    "lint": "tslint -t verbose --project .",
    "test": "jest --watch",
    "ci:build": "CI=true yarn run compile",
    "ci:lint": "mkdir -p test_results/tslint && tslint --format junit --out test_results/tslint/results.xml --project .",
    "ci:test": "JEST_JUNIT_OUTPUT=test_results/jest/results.xml jest --runInBand --colors --reporters=jest-junit && codecov -t $CODECOV_TOKEN",
    "now-build": "yarn run compile",
    "now-start": "NODE_ENV=production node build/index.js"
  },
  "dependencies": {
    "apollo-server": "^2.1.0",
    "apollo-server-express": "^2.1.0",
    "dotenv": "^6.1.0",
    "got": "^9.2.2",
    "graphql": "^14.0.2",
    "graphql-iso-date": "^3.6.1",
    "helmet": "^3.13.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/got": "^8.3.4",
    "@types/graphql": "^14.0.1",
    "@types/graphql-iso-date": "^3.3.0",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.5",
    "codecov": "^3.1.0",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "nodemon": "^1.18.4",
    "now": "^11.4.6",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.1.1"
  }
}
