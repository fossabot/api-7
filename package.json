{
  "name": "paderbornjs-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/paderbornjs/api",
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "license": "MIT",
  "private": true,
  "now": {
    "alias": "api.paderbornjs.org",
    "files": [
      "build"
    ]
  },
  "scripts": {
    "precompile": "rm -rf build && mkdir build && find ./src -name '*.graphql' -exec cp -pr  '{}' 'build/' ';'",
    "compile": "tsc",
    "predeploy": "yarn run compile",
    "deploy": "now --public && now alias",
    "now-start": "NODE_ENV=production node build/index.js",
    "start": "NODE_ENV=development nodemon -e ts,graphql --exec ts-node src/index.ts"
  },
  "dependencies": {
    "apollo-server": "^2.1.0",
    "apollo-server-express": "^2.1.0",
    "cors": "^2.8.4",
    "dotenv": "^6.1.0",
    "got": "^9.2.2",
    "graphql": "^14.0.2",
    "helmet": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/got": "^8.3.4",
    "@types/graphql": "^14.0.1",
    "@types/helmet": "^0.0.42",
    "nodemon": "^1.18.4",
    "now": "^11.4.6",
    "prettier": "^1.14.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1"
  }
}
